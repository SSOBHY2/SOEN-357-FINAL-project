{
  "manifest_version": 3,
  "name": "LexiLoop",
  "version": "1.0",
  "description": "Simplifies complex text to improve reading comprehension for ESL and dyslexic students.",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "LexiLoop - Click to simplify text",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://openrouter.ai/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html",
        "panel.js",
        "popup.html",
        "popup.js",
        "result.html",
        "result.js",
        "style.css",
        "config.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "simplify-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Simplify selected text"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open LexiLoop popup"
    }
  }
}